<div class="metric-card">
    <h3>@Title</h3>
    <p>@Description</p>
    <canvas id="@ChartId"></canvas>
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Description { get; set; } = "";
    [Parameter] public string ChartId { get; set; } = Guid.NewGuid().ToString(); // unique id
}
