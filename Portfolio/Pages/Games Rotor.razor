@code {
    public class GameImage
    {
        public string Src { get; set; } = "";
        public string Name { get; set; } = "";
    }

    private List<GameImage> AllImages = new()
    {
        new() { Src = "images/Castle Climbers Background.png", Name = "Castle Climbers" },
        new() { Src = "images/Hand Copy Cover.png", Name = "Health Game" },
        new() { Src = "Images/Car Game.png", Name = "Car Game" },
        new() { Src = "images/Uni Game 1.png", Name = "University Game 1" },
        new() { Src = "images/Uni Unity Scene.png", Name = "World Builder 1" },
        new() { Src = "images/Scene.png", Name = "World Builder 2" },
        new() { Src = "images/Scene 2.png", Name = "Uni Game 2" },
    };

    private List<GameImage> DisplayedImages = new();
    private const int VisibleCount = 5;
    private const int ImageWidthWithGap = 220;
    private ElementReference CarouselTrackRef;
    private int TranslateOffset = 0;
    private bool IsTransitioning = false;
    private string? SelectedImageName;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (SelectedImageName == "Castle Climbers")
        {
            await JS.InvokeVoidAsync("renderRatingsChart");
        }
    }

    protected override void OnInitialized()
    {
        SelectedImageName = "Castle Climbers";

        var extraFront = AllImages[^1];
        var extraBack = AllImages[0];

        DisplayedImages = new List<GameImage> { extraFront };
        DisplayedImages.AddRange(AllImages.Take(VisibleCount));
        DisplayedImages.Add(extraBack);

        TranslateOffset = ImageWidthWithGap;
    }

    private async Task ScrollRight()
    {
        if (IsTransitioning) return;
        IsTransitioning = true;

        var first = AllImages[0];
        AllImages.RemoveAt(0);
        AllImages.Add(first);
        UpdateDisplayedImages();

        TranslateOffset = 0;
        await JS.InvokeVoidAsync("resetCarouselTransform", CarouselTrackRef, TranslateOffset);
        await Task.Yield();

        TranslateOffset = ImageWidthWithGap;
        StateHasChanged();
        await Task.Delay(500);

        IsTransitioning = false;
    }

    private async Task ScrollLeft()
    {
        if (IsTransitioning) return;
        IsTransitioning = true;

        var last = AllImages[^1];
        AllImages.RemoveAt(AllImages.Count - 1);
        AllImages.Insert(0, last);
        UpdateDisplayedImages();

        TranslateOffset = ImageWidthWithGap * 2;
        await JS.InvokeVoidAsync("resetCarouselTransform", CarouselTrackRef, TranslateOffset);
        await Task.Yield();

        TranslateOffset = ImageWidthWithGap;
        StateHasChanged();
        await Task.Delay(500);

        IsTransitioning = false;
    }

    private void UpdateDisplayedImages()
    {
        var extraFront = AllImages[^1];
        var extraBack = AllImages[0];

        DisplayedImages = new List<GameImage> { extraFront };
        DisplayedImages.AddRange(AllImages.Take(VisibleCount));
        DisplayedImages.Add(extraBack);
    }

    private async void SelectImage(string name)
    {
        SelectedImageName = name;
        StateHasChanged();

        if (name == "Castle Climbers")
        {
            await Task.Delay(100); // Small delay to ensure canvas renders
            await JS.InvokeVoidAsync("renderRatingsChart");
        }
        else if (name == "Health Game")
        {
            await Task.Delay(100); // Ensure canvases are rendered
            await JS.InvokeVoidAsync("renderHealthPieCharts");
        }
    }

}

