<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #0A0A0A;
        margin: 0;
        padding: 0;
    }

    header {
        background: linear-gradient(to right, #FF7E00, #FFA500);
        color: white;
        padding: 0 40px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: flex-end;
        height: 80px;
        font-size: 20px;
    }

    nav ul {
        list-style: none;
        display: flex;
        gap: 20px;
        align-items: center;
        margin: 0;
        padding: 0;
    }

        nav ul li a {
            text-decoration: none;
            color: #121212;
            font-weight: bold;
            position: relative;
            padding: 15px 0;
            display: inline-block;
            font-size: 22px;
        }

            nav ul li a::after {
                content: '';
                position: absolute;
                left: 0;
                bottom: 0;
                width: 0;
                height: 2px;
                background-color: yellow;
                transition: width 0.3s ease-in-out;
            }

            nav ul li a:hover::after {
                width: 100%;
            }

    .description {
        text-align: center;
        padding: 40px;
        background-color: #121212;
        font-size: 20px;
        line-height: 1.6;
        max-width: 1000px;
        margin: 40px auto;
        color: white;
        border: 1px solid #333;
        border-radius: 10px;
        transition: transform 0.3s ease;
    }

        .description:hover {
            transform: scale(1.02);
        }

    .carousel-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #0A0A0A;
        padding: 40px 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .carousel-container {
        width: 1040px;
        overflow: hidden;
        position: relative;
    }

    .carousel-track {
        display: flex;
        transition: transform 0.5s ease;
        gap: 20px;
    }

        .carousel-track img {
            width: 200px;
            height: auto;
            border-radius: 10px;
            flex-shrink: 0;
            box-shadow: 0 4px 8px rgba(255, 255, 255, 0.1);
            cursor: pointer;
        }

    .carousel-button {
        background-color: #FFA500;
        border: none;
        color: black;
        font-size: 24px;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 8px;
        margin: 0 10px;
        transition: background-color 0.3s ease;
    }

        .carousel-button:hover {
            background-color: #FF7E00;
        }
</style>

<header>
    <nav>
        <ul>
            <li><NavLink href="/" class="hover:text-yellow-300 transition duration-300">Home</NavLink></li>
            <li><NavLink href="/about" class="hover:text-yellow-300 transition duration-300">About</NavLink></li>
            <li><NavLink href="/services" class="hover:text-yellow-300 transition duration-300">Services</NavLink></li>
