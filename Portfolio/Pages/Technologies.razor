<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #0A0A0A;
        margin: 0;
        padding: 0;
    }

    header {
        background: linear-gradient(to right, #FF7E00, #FFA500);
        color: white;
        padding: 0 40px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: flex-end;
        height: 80px;
        font-size: 20px;
    }

    nav {
        display: flex;
        align-items: center;
    }

        nav ul {
            list-style: none;
            display: flex;
            gap: 20px;
            align-items: center;
            margin: 0;
            padding: 0;
        }

            nav ul li a {
                text-decoration: none;
                color: #121212;
                font-weight: bold;
                position: relative;
                padding: 15px 0;
                display: inline-block;
                font-size: 22px;
            }

                nav ul li a::after {
                    content: '';
                    position: absolute;
                    left: 0;
                    bottom: 0;
                    width: 0;
                    height: 2px;
                    background-color: yellow;
                    transition: width 0.3s ease-in-out;
                }

                nav ul li a:hover::after {
                    width: 100%;
                }

    .description {
        text-align: center;
        padding: 40px;
        background-color: #121212;
        font-size: 20px;
        line-height: 1.6;
        max-width: 1000px;
        margin: 80px auto;
        color: white;
    }

    .tech-section {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        max-width: 1000px;
        margin: 40px auto;
        padding: 20px;
        text-align: center;
        justify-content: center; /* Center items when there are few */
    }

    .tech-box {
        background: #121212;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        color: white;
    }

        .tech-box img {
            width: 100px;
            height: 100px;
            object-fit: contain;
            margin-bottom: 10px;
        }

</style>

