@* Stylesheet *@
<style>
    html, body {
        margin: -18px;
        padding: 0;
        background-color: #222;
        color: white;
        font-family: Arial, sans-serif;
    }

    .navbar {
        width: 100%;
        background-color: #333;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 20px;
        height: 80px;
    }

    .navbar-left {
        display: flex;
        align-items: center;
    }

    .navbar-title {
        color: white;
        font-size: 24px;
        font-weight: bold;
        margin-top: 18px;
    }

    .navbar-links {
        margin: 0;
        padding: 0;
        list-style: none;
        display: flex;
        gap: 20px;
        margin-top: 18px;
    }

        .navbar-links li {
            display: flex;
            align-items: center;
        }

        .navbar-links a {
            color: white;
            text-decoration: none;
            font-size: 18px;
        }

            .navbar-links a:hover {
                background-color: #575757;
                padding: 8px 12px;
                border-radius: 5px;
            }

    .image-container {
        position: relative;
        margin: 0;
        padding: 0;
    }

        .image-container img {
            width: 100%;
            height: auto;
            display: block;
        }

    .overlay-text {
        position: absolute;
        top: 28%;
        left: 22%;
        transform: translate(-30%, -30%);
        color: white;
        font-size: 48px;
        font-weight: bold;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.7);
        text-align: center;
    }

    .intro-section {
        text-align: center;
        margin: 60px 20px 40px 20px;
    }

        .intro-section h1 {
            font-size: 48px;
            margin-bottom: 10px;
        }

        .intro-section p {
            font-size: 20px;
            color: #ccc;
        }

    .cards-container {
        display: flex;
        justify-content: center;
        gap: 10px; /* Reduced gap */
        padding: 40px 20px; /* Slightly smaller padding */
        flex-wrap: wrap;
    }



    .card {
        background-color: #222;
        border-radius: 10px;
        padding: 20px;
        width: 300px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0,0,0,0.5);
    }

        .card h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .card img {
            width: 100%;
            height: auto;
            margin-bottom: 15px;
            border-radius: 8px;
        }

        .card p {
            font-size: 16px;
            color: #ccc;
            margin-bottom: 20px;
        }

    .card-button {
        display: inline-block;
        background-color: #575757;
        padding: 10px 20px;
        color: white;
        font-size: 16px;
        border-radius: 5px;
        text-decoration: none; /* Remove underline */
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .card-button:hover {
            background-color: #777;
        }

    .chart-container canvas {
        max-width: 400px;
        max-height: 400px;
        width: 100%;
        height: auto;
        margin: 0 auto;
    }

    .chart-container {
        text-align: center;
        margin: 60px 20px;
    }

        .chart-container h2 {
            font-size: 36px;
            margin-bottom: 20px;
        }


</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('myPieChart').getContext('2d');
    const myPieChart = new Chart(ctx, {
        type: 'doughnut',

        data: {
            labels: ['Castle Climbers', 'Bucket Connect', 'Girls Who Walk'],
            datasets: [{
                label: 'Project Distribution',
                data: [185, 180, 70], // Percentage values
                backgroundColor: [
                    '#FF6384',
                    '#36A2EB',
                    '#FFCE56',
                    '#4BC0C0'
                ],
                borderColor: '#222',
                borderWidth: 2
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    labels: {
                        color: 'white', // Make legend text white
                        font: {
                            size: 16
                        }
                    }
                }
            }
        }
    });
</script>
