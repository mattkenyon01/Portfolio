@page "/"

@* Blazor component *@

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    header {
        background: linear-gradient(to right, #FF7E00, #FFA500);
        color: white;
        padding: 0 40px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: flex-end;
        height: 80px; /* Increased header height */
        font-size: 20px; /* Increased text size */
    }

    nav {
        display: flex;
        align-items: center;
    }

        nav ul {
            list-style: none;
            display: flex;
            gap: 20px;
            align-items: center;
            margin: 0;
            padding: 0;
        }

            nav ul li a {
                text-decoration: none;
                color: white;
                font-weight: bold;
                position: relative;
                padding: 15px 0;
                display: inline-block;
                font-size: 22px; /* Increased text size */
            }

                nav ul li a::after {
                    content: '';
                    position: absolute;
                    left: 0;
                    bottom: 0;
                    width: 0;
                    height: 2px;
                    background-color: yellow;
                    transition: width 0.3s ease-in-out;
                }

                nav ul li a:hover::after {
                    width: 100%;
                }

    .hero {
        background: url('/images/Castle Climbers Background.png') no-repeat center center;
        background-size: cover; /* Ensures image fills the section */
        width: 100vw; /* Makes sure it spans the full viewport */
        height: 130vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        position: relative;
        top: 60px; /* Matches header height */
        left: -32px; /* Remove offset */
    }


    .hero-content {
        background: none;
        padding: 20px;
        border-radius: 0;
        font-size: 35px;
        position: absolute; /* Allows precise positioning */
        top: 30%; /* Moves it up */
        left: 35%; /* Keeps it horizontally centered */
        transform: translate(-50%, -30%); /* Ensures proper centering */
        text-align: center; /* Keeps text alignment centered */
        /* Add these */
        width: 40%; /* Adjusts the width (try lower values like 40% or 30%) */

    }

        .hero-content h2 {
            font-size: 50px; /* Increased font size */
            font-weight: bold;
        }


    .description {
        text-align: center;
        padding: 40px;
        background-color: white;
        font-size: 20px;
        line-height: 1.6;
        max-width: 1000px; /* Increased width */
        margin: 80px auto; /* Moves it further down */
    }

    ::-webkit-scrollbar {
        width: 8px;
    }

    ::-webkit-scrollbar-track {
        background: transparent;
    }

    ::-webkit-scrollbar-thumb {
        background: rgba(0, 0, 0, 0.3);
        border-radius: 4px;
    }

    .skills-chart {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 40px;
        padding: 40px;
        background-color: white;
        max-width: 1000px;
        margin: 40px auto;
    }

    .chart-container {
        width: 300px;
        height: 300px;
    }

    .chart-description {
        max-width: 500px;
        font-size: 20px;
        line-height: 1.6;
    }

    .project-showcase {
        display: flex;
        justify-content: space-between;
        align-items: center; /* Ensures all items are aligned vertically */
        gap: 20px;
        margin-top: 20px;
    }

    .project-item {
        display: flex;
        align-items: center;
        gap: 15px;
        flex: 1;
        padding: 15px;
        min-width: 30%;
    }

    .project-image {
        width: 70px;
        height: 70px;
        object-fit: cover;
        border-radius: 8px;
    }

    .project-text {
        flex: 1;
    }

        .project-text h4 {
            margin: 0;
            font-size: 16px;
        }

        .project-text p {
            margin: 0;
            font-size: 14px;
            color: #666;
        }

    .content-section {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 40px;
        padding: 40px;
        background-color: white;
        max-width: 1000px;
        margin: 40px auto;
    }

        .content-section img {
            width: 300px;
            height: auto;
            border-radius: 10px;
        }

    .content-description {
        max-width: 500px;
        font-size: 20px;
        line-height: 1.6;
    }

    button, .button {
        background: linear-gradient(to right, #4A90E2, #7B61FF);
        color: white;
        border: none;
        padding: 15px 30px;
        font-size: 20px;
        font-weight: bold;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s, box-shadow 0.2s;
        cursor: pointer;
        text-decoration: none; /* Remove underline */
        display: inline-block; /* Ensures it behaves like a button */
        text-align: center;
    }

        button:hover, .button:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            color: white; /* Keep text color consistent */
        }

</style>

<header>
    <nav>
        <ul>
            <li><NavLink href="/" class="hover:text-yellow-300 transition duration-300">Home</NavLink></li>
            <li><NavLink href="/about" class="hover:text-yellow-300 transition duration-300">About</NavLink></li>
            <li><NavLink href="/services" class="hover:text-yellow-300 transition duration-300">Services</NavLink></li>
            <li><NavLink href="/contact" class="hover:text-yellow-300 transition duration-300">Contact</NavLink></li>
        </ul>
    </nav>
</header>

<section class="hero">
    <div class="hero-content">
        <h2 class="text-5xl font-bold">Matt Kenyon - Developer & Game Creator</h2>
        <p class="mt-6 text-xl leading-relaxed">
            Crafting immersive games and powerful software using a diverse range of languages and technologies.
            Explore my portfolio to see the projects I’ve built, from innovative games to cutting-edge applications.
        </p>
        <button>
            View My Work
        </button>
    </div>
</section>

<section class="description">
    <h3>About Me</h3>
    <p>
        I've been coding for seven years, working on all sorts of projects with different 
        programming languages and technologies. I started out focusing on Unity but recently 
        branched out to explore other languages, like Flutter with Dart and C++ with CMake, to 
        expand my programming knowledge.
    </p>
</section>

<section class="skills-chart">
    <div class="chart-container">
        <canvas id="skillsChart"></canvas>
    </div>
    <div class="chart-description">
        <h3>Application Distribution</h3>
        <p>
            My programming expertise is diverse, with experience in multiple technologies.
            I started with Unity and C#, later exploring Dart with Flutter and C++ with CMake
            for advanced projects. My skill set continues to evolve as I learn and apply
            new technologies.
        </p>

        <!-- New Section: Projects displayed next to each other -->
        <div class="project-showcase">
            <div class="project-item">
                <img src="images/Cropped CC.png" alt="Castle Climbers" class="project-image">
                <div class="project-text">
                    <h4>184</h4>
                </div>
            </div>
            <div class="project-item">
                <img src="images/Cropped GWW Logo.png" alt="Girls Who Walk" class="project-image">
                <div class="project-text">
                    <h4>68</h4>
                </div>
            </div>
            <div class="project-item">
                <img src="images/Bucket Connect App Icon.png" alt="Bucket Connect" class="project-image">
                <div class="project-text">
                    <h4>154</h4>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="description">
    <h3>More About My Work</h3>
    <p>
        I am constantly pushing the boundaries of my knowledge, exploring new tools and
        frameworks to develop innovative applications. Whether it's game development,
        mobile apps, or complex software solutions, I strive to create impactful and
        efficient projects.
    </p>
    <a href="/technologies" class="button">Explore More</a>





</section>

<section class="content-section">
    <img src="images/Castle Climbers Cover.png" alt="Example Image Left">
    <div class="content-description">
        <h3>Innovative Projects</h3>
        <p>
            From concept to execution, I bring ideas to life with efficient code and creative problem-solving.
            My portfolio features games, applications, and software solutions designed for performance and engagement.
        </p>
        <a href="/Games" class="button">Explore More</a>
    </div>
</section>

<section class="content-section" style="flex-direction: row-reverse;">
    <img src="images/Bucket Connect Cover.png" alt="Example Image Right">
    <div class="content-description">
        <h3>Technologies I Use</h3>
        <p>
            I specialize in a wide range of programming languages and frameworks, including Unity, Flutter, and C++.
            Each project is an opportunity to refine my skills and explore new technology stacks.
        </p>
        <a href="/Applications" class="button">Explore More</a>
    </div>
</section>

@inject IJSRuntime JS

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("initSkillsChart");
        }
    }
}
